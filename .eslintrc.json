{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "plugins": [
    "eslint-plugin-custom-rules"
  ],
  "rules": {
    "custom-rules/no-text-size-class": "warn"
  },
  "ignorePatterns": [
    "next.config.js",
    "postcss.config.js"
  ]
}